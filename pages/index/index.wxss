/**index.wxss**/
.container{
  padding: 30rpx 10rpx;
}
.top-line{
  position: relative;
  height: 100rpx;
  padding: 0 10rpx;
  background: #f8f8f8;
  border-radius: 5rpx;
}

.rout-item{
  overflow: hidden;
  width: 50%;
  height: 100rpx;
}
.rout-item .rout-image{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 50%;
  transform: translate(0, -50%);
}
.rout-item>view{
  position: absolute;
  top: 50%;
  left: 70rpx;
  transform: translate(0, -50%);
  font-size: 28rpx;
  color: #03A9F4;
}
.rout-item .arrow-img{
  width: 25rpx;
  height: 25rpx;
  left: 190rpx;
}
.top-line .add-image{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 50%;
  right: 20rpx;
  transform: translate(0, -50%);
}

.top-line .handUser{
    position: absolute;
    width: 210rpx;
    height: 65rpx;
    top: 50%;
    right: 100rpx;
    color: #03A9F4;
    font-size: 28rpx;
    transform: translate(0, -50%);
  }

.terminal-list{
  overflow: hidden;
  padding: 30rpx 0rpx;
}
.terminal-item{
  float: left;
  width: 48%;
  margin: 0 1%;
  text-align: center;
}
.item-image{
  padding: 70rpx 0;
}
.item-image>image{
  width: 100rpx;
  height: 100rpx;
}
.item-address{
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  color: #2f9bff;
  background-color: #f8f8f8;
}
.van-action-sheet__item.van-hairline--top{
  color: #ee0a24;
}