/* pages/readSSSJ/readSSSJ.wxss */
.container{
  padding: 30rpx 16rpx;
}
.view-item{
  padding: 10rpx 10rpx 0;
  font-size: 30rpx;
}
.read{
  padding: 30rpx;
}
.read-title{
  color: #2196f3;
  font-size: 30rpx;
}
.read-txt{
  height: 800rpx;
  margin-top: 10rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  border: 2rpx solid #d3d3d3;
  border-radius: 5rpx;
  overflow-y: scroll;
}

.btn{
  width: 100%;
  text-align: center;
  padding: 15rpx 0;
  line-height: 2;
  font-size: 32rpx;
  background-color: #2f9bff;
  color: #fff;
  position: fixed;
  bottom: 0;
  z-index: 66;
}
.ipt_left{
  display: inline-block;
  width: 25%;
  vertical-align: top;
}
.ipt_right{
  display: inline-block;
  width: 70%;
  border: 2rpx solid #d3d3d3;
  padding: 6rpx;
  font-size: 28rpx;
}
.picker{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  border: 2rpx solid #f2f2f2;
  z-index: 999;
}